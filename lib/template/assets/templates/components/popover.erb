<%
  component.configure do |config|
    config.defaults(align: :center, relative_to: nil)
    config.classes(base: "popover")

    config.conditional_classes with: :align do |alignment|
      { base: "popover--align-to-#{alignment}" }
    end
  end
%>

<div class="<%= component.classes_for(:base) %>"<% unless component.relative_to.nil? %> data-popover-horizontally-relative-to-closest="<%= component.relative_to %>"<% end %>>
  <div class="popover__tooltip"></div>
  <div class="popover__content-wrapper">
    <div class="popover__content">
      <% if component.block %>
        <%= capture(Docks::Helpers::Component::Popover.new, &component.block) %>
      <% end %>
    </div>
  </div>
</div>
