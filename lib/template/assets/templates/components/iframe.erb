<%
  component.configure do |config|
    config.defaults(id: unique_iframe_id)
  end

  id = component.id
%>

<iframe class="iframe" data-iframe-id="<%= id %>" frameborder="0"></iframe>
<script class="iframe__content">
  <%= CGI.escapeHTML render(Docks::Templates.demo.path, layout: Docks::Templates.demo.layout, locals: { demo: component.demo, id: id }) %>
</script>
